{
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/rehypejs/rehype",
  "repository": "rehypejs/rehype",
  "bugs": "https://github.com/rehypejs/rehype/issues",
  "devDependencies": {
    "bail": "^1.0.0",
    "browser-pack-flat": "^3.0.5",
    "browserify": "^15.0.0",
    "bundle-collapser": "^1.3.0",
    "chalk": "^2.0.0",
    "common-shakeify": "^0.4.5",
    "escodegen": "^1.7.0",
    "esmangle": "^1.0.1",
    "esprima": "^4.0.0",
    "execa": "^0.9.0",
    "hast-util-assert": "^1.0.0",
    "lerna": "^2.0.0",
    "mdast-zone": "^3.0.1",
    "nyc": "^11.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.5.1",
    "to-vfile": "^4.0.0",
    "unist-builder": "^1.0.2",
    "unist-util-remove-position": "^1.0.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build-md": "remark . -qfo",
    "build-bundle": "browserify -p browser-pack-flat/plugin -p [ common-shakeify -v ] -p bundle-collapser/plugin  -s rehype packages/rehype > rehype.js",
    "build-mangle": "esmangle rehype.js > rehype.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "rehype.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      "./script/parse-error"
    ]
  }
}
